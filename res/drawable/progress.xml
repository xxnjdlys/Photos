<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="1080">

    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="8"
        android:useLevel="false">

        <size
            android:width="48dp"
            android:height="48dp" />
        <gradient
            android:angle="0"
            android:startColor="@color/tab_selected_color"
            android:centerColor="@color/filter_text_color_selected"
            android:endColor="@color/white30"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate> 