<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:background="@color/white"
    android:layout_gravity="center_horizontal">

    <TextView
        android:id="@+id/tvHeadAbulm"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:drawableStart="@mipmap/ic_head_abulm"
        android:drawableLeft="@mipmap/ic_head_abulm"
        android:drawablePadding="16dp"
        android:text="@string/edit_head_album" />

    <TextView
        android:id="@+id/tvHeadCamera"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:drawableStart="@mipmap/ic_head_camera"
        android:drawableLeft="@mipmap/ic_head_camera"
        android:drawablePadding="16dp"
        android:text="@string/edit_head_camera"/>

</LinearLayout>