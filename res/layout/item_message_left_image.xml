<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    tools:ignore="SpUsage,ContentDescription">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_left_image"
            android:background="#ffd8d8d8"
            android:layout_width="125dp"
            android:layout_height="220dp" />

        <ProgressBar
            android:id="@+id/item_left_image_loading"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/custom_progress_white"
            android:visibility="invisible"
            tools:visibility="visible" />

    </LinearLayout>

    <include
        android:id="@+id/item_left_message_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        layout="@layout/layout_chat_user_info"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/item_left_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/txt_date_time"
        android:textSize="10dp"
        tools:text="20:22" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tvNotFriendTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_20"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:textColor="@color/white"
        android:background="@drawable/black_round_bg"
        android:text="@string/txt_reply_to_become_friend"
        android:textSize="12dp"
        tools:text="this is tips for you." />

</LinearLayout>