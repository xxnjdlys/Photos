<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20"
    android:paddingTop="@dimen/dp_16"
    android:orientation="vertical"
    tools:ignore="SpUsage,RtlHardcoded,RtlCompat,ContentDescription" >

    <LinearLayout
        android:id="@+id/ll_left_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/message_left_text_bg">

                <TextView
                    android:id="@+id/item_left_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="14dp"
                    android:paddingTop="9dp"
                    android:paddingRight="14dp"
                    android:paddingBottom="9dp"
                    android:textColor="#263238"
                    android:textSize="15dp"
                    tools:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈" />

                <LinearLayout
                    android:id="@+id/ll_left_message_revise"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:visibility="visible">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="#17000000"/>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ProgressBar
                            android:id="@+id/translateLoading"
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:layout_marginStart="@dimen/dp_14"
                            android:layout_marginEnd="@dimen/dp_14"
                            android:layout_marginTop="9dp"
                            android:layout_marginBottom="9dp"
                            android:visibility="visible"
                            android:layout_gravity="center_vertical"
                            android:indeterminateDrawable="@drawable/custom_progress_white"
                            tools:visibility="visible" />

                        <TextView
                            android:id="@+id/item_left_message_revise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="9dp"
                            android:paddingTop="9dp"
                            android:paddingLeft="@dimen/dp_14"
                            android:paddingRight="@dimen/dp_14"
                            android:textColor="#263238"
                            android:textSize="15dp"
                            tools:text="哈哈"/>
                    </FrameLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_left_translate"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="6dp"
            android:src="@mipmap/ic_translate" />

        <ImageView
            android:id="@+id/iv_left_edit"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="6dp"
            android:src="@mipmap/ic_edit_message"/>

    </LinearLayout>

    <include
        android:id="@+id/item_left_message_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        layout="@layout/layout_chat_user_info"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/item_left_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/txt_date_time"
        android:textSize="10dp"
        tools:text="20:22" />


    <TextView
        android:visibility="gone"
        android:id="@+id/tvNotFriendTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_20"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:textColor="@color/white"
        android:background="@drawable/black_round_bg"
        android:text="@string/txt_reply_to_become_friend"
        android:textSize="12dp"
        tools:text="this is tips for you." />

</LinearLayout>