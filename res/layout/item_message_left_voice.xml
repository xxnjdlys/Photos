<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20"
    android:paddingTop="@dimen/dp_16"
    tools:ignore="SpUsage">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/item_voice_layout"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/message_text_bg_w"
            android:minWidth="120dp"
            android:paddingLeft="14dp">

            <ImageView
                android:id="@+id/iv_chat_voice_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/chat_voice_play_left" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <LinearLayout
                android:id="@+id/item_voice_state_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_voice_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/item_voice_new_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:text="@string/txt_asterisk"
                    android:textColor="@color/red"
                    android:textSize="32dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/item_voice_send_faile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/send_image_warning"
                android:visibility="gone" />
        </FrameLayout>


    </LinearLayout>

    <include
        android:id="@+id/item_left_message_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        layout="@layout/layout_chat_user_info"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/item_right_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|left"
        android:layout_marginTop="5dp"
        android:textColor="#c7c7c7"
        android:textSize="10dp" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tvNotFriendTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_20"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:textColor="@color/white"
        android:background="@drawable/black_round_bg"
        android:text="@string/txt_reply_to_become_friend"
        android:textSize="12dp"
        tools:text="this is tips for you."
        />


</LinearLayout>
