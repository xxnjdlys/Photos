<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="16dp"
    tools:ignore="SpUsage,RtlHardcoded,RtlCompat">

    <LinearLayout
        android:id="@+id/ll_right_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="40dp"
        android:background="@drawable/message_text_bg">

        <TextView
            android:id="@+id/item_right_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="9dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="9dp"
            android:textColor="#263238"
            android:textSize="15dp"
            tools:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈" />

        <LinearLayout
            android:id="@+id/ll_right_message_revise"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="#17000000"/>

            <TextView
                android:id="@+id/item_right_message_revise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="9dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="9dp"
                android:textColor="#263238"
                android:textSize="15dp"
                tools:text="哈哈"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/sendStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="-40dp"
        android:layout_toStartOf="@id/ll_right_message">

        <ProgressBar
            android:id="@+id/sending"
            android:layout_width="16dp"
            android:layout_height="16dp"
            tools:visibility="invisible" />

        <ImageView
            android:id="@+id/sendError"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignTop="@+id/sending"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/ic_error"
            android:visibility="gone"
            tools:visibility="visible" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_item_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/ll_right_message"
        android:layout_below="@id/ll_right_message"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/message_text_bg">

        <include
            android:id="@+id/item_right_message_user_info"
            android:visibility="gone"
            layout="@layout/layout_chat_user_info" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_right_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/ll_right_message"
        android:layout_below="@id/ll_item_info_layout"
        android:layout_gravity="end"
        android:layout_marginTop="5dp"
        android:textColor="#c7c7c7"
        android:textSize="10dp" />

    <!--
     成为好友提示.
    -->
    <TextView
        android:visibility="gone"
        android:id="@+id/tvAcceptTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/item_right_date"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:textColor="@color/white"
        android:text="@string/txt_friendship_tips"
        android:background="@drawable/black_round_bg"
        android:textSize="12dp"
        tools:text="This is accept tips for you." />

</RelativeLayout>