<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="332dp"
        android:layout_height="249dp"
        android:layout_marginTop="138dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/meet_result_bg" />


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="58dp">

            <ImageView
                android:id="@+id/ivMeetHearbeat"
                android:layout_width="102dp"
                android:layout_height="24dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/meet_heartbeat"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivMeetLeftIcon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_toLeftOf="@id/ivMeetHearbeat"
                android:background="@drawable/meet_result_left_bg"
                android:padding="2dp"
                app:layout_constraintEnd_toStartOf="@+id/ivMeetHearbeat"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvMeetLeftName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivMeetLeftIcon"
                android:layout_alignLeft="@id/ivMeetLeftIcon"
                android:layout_alignRight="@id/ivMeetLeftIcon"
                android:layout_marginTop="33dp"
                android:gravity="center_horizontal"
                android:maxWidth="80dp"
                android:maxLines="1"
                android:textColor="#333333"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="@+id/ivMeetLeftIcon"
                app:layout_constraintHorizontal_bias="0.48"
                app:layout_constraintStart_toStartOf="@+id/ivMeetLeftIcon"
                app:layout_constraintTop_toBottomOf="@+id/ivMeetLeftIcon" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/ivMeetLeftIcon"
                android:layout_alignTop="@+id/tvMeetLeftName"
                android:layout_alignRight="@id/ivMeetLeftIcon"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/ivMeetLeftIcon"
                app:layout_constraintStart_toStartOf="@+id/ivMeetLeftIcon"
                app:layout_constraintTop_toBottomOf="@+id/tvMeetLeftName">

                <TextView
                    android:id="@+id/tvMeetLeftGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="2dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <LinearLayout
                    android:id="@+id/tvMeetLeftLanguageLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/meet_label_countries"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp">

                    <ImageView
                        android:id="@+id/tvMeetLeftLanguageIcon"
                        android:layout_width="12dp"
                        android:layout_height="12dp" />

                    <TextView
                        android:id="@+id/tvMeetLeftLanguage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:ellipsize="end"
                        android:maxWidth="48dp"
                        android:maxLines="1"
                        android:textColor="#333333"
                        android:textSize="12dp" />
                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/ivMeetRightIcon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_toRightOf="@id/ivMeetHearbeat"
                android:background="@drawable/meet_result_right_bg"
                android:padding="2dp"
                app:layout_constraintStart_toEndOf="@+id/ivMeetHearbeat"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvMeetRightName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivMeetRightIcon"
                android:layout_alignBaseline="@id/ivMeetRightIcon"
                android:layout_marginTop="33dp"
                android:maxWidth="80dp"
                android:maxLines="1"
                android:textColor="#333333"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="@+id/ivMeetRightIcon"
                app:layout_constraintStart_toStartOf="@+id/ivMeetRightIcon"
                app:layout_constraintTop_toBottomOf="@+id/ivMeetRightIcon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvMeetRightName"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/ivMeetRightIcon"
                app:layout_constraintStart_toStartOf="@+id/ivMeetRightIcon"
                app:layout_constraintTop_toBottomOf="@+id/tvMeetRightName">

                <TextView
                    android:id="@+id/tvMeetRightGender"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawablePadding="2dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <LinearLayout
                    android:id="@+id/tvMeetRightLanguageLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/meet_label_countries"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp">

                    <ImageView
                        android:id="@+id/tvMeetRightLanguageIcon"
                        android:layout_width="12dp"
                        android:layout_height="12dp" />

                    <TextView
                        android:id="@+id/tvMeetRightLanguage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:ellipsize="end"
                        android:maxWidth="48dp"
                        android:maxLines="1"
                        android:textColor="#333333"
                        android:textSize="12dp" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tvMeetFate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:textColor="#FE5862"
                android:textSize="12dp"
                app:layout_constraintEnd_toStartOf="@+id/ivMeetRightIcon"
                app:layout_constraintStart_toEndOf="@+id/ivMeetLeftIcon"
                app:layout_constraintTop_toBottomOf="@+id/ivMeetHearbeat" />

        </android.support.constraint.ConstraintLayout>
    </FrameLayout>


    <TextView
        android:id="@+id/tvKnowTa"
        android:layout_width="184dp"
        android:layout_height="69dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/pic_start_meet_btn_bg"
        android:gravity="center"
        android:text="@string/meet_know_ta"
        android:textColor="@color/white"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/tvGiveBtn"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/meet_result_give_bg"
        android:gravity="center"
        android:text="@string/meet_result_cancel"
        android:textColor="#666666"
        android:textSize="17dp" />
</LinearLayout>