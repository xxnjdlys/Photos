<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_filter_layout"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:background="@drawable/selector_filter_bg"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/iv_filter_head"
        android:layout_width="20dp"
        android:layout_height="20dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_filter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_gravity="center_vertical"
        android:includeFontPadding="false"
        android:textSize="16dp"
        android:textColor="@drawable/selector_filter_text_color"
        tools:text="Chinese"
        tools:ignore="RtlCompat,SpUsage" />

</LinearLayout>
