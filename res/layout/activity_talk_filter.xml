<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="SpUsage,RtlCompat,ContentDescription,RelativeOverlap">

    <include
        android:id="@+id/titlebar"
        layout="@layout/toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tvFilterSure"
        android:layout_below="@+id/titlebar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:text="@string/filter_language_title"
                android:textColor="#ff505050"
                android:textSize="18dp" />

            <language.chat.meet.talk.widget.flowlayout.TagFlowLayout
                android:id="@+id/rvFilterLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#EEEEEE" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="54dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:text="@string/ages_between"
                                android:textColor="#ff505050"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/tvFilterAge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="26dp"
                                android:textColor="@color/label_text"
                                android:textSize="12dp" />

                        </RelativeLayout>

                        <language.chat.meet.talk.widget.RangeSeekBar
                            android:id="@+id/rsbTalkFilter"
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            app:lineColorSelected="#8D5DFF"
                            app:rs_lineHeight="4"
                            app:max="56"
                            app:min="14" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="@color/bg_line" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:text="@string/gender"
                            android:textColor="#ff505050"
                            android:textSize="18dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp">

                            <TextView
                                android:id="@+id/tvFilterFemale"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:background="@drawable/selector_filter_bg"
                                android:drawableStart="@mipmap/ic_female"
                                android:drawablePadding="7dp"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:padding="7dp"
                                android:text="@string/woman"
                                android:textColor="@drawable/selector_filter_text_color" />

                            <TextView
                                android:id="@+id/tvFiltermale"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginStart="30dp"
                                android:layout_marginEnd="30dp"
                                android:background="@drawable/selector_filter_bg"
                                android:button="@null"
                                android:drawableStart="@mipmap/ic_male"
                                android:drawablePadding="7dp"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:padding="7dp"
                                android:text="@string/man"
                                android:textColor="@drawable/selector_filter_text_color" />

                            <TextView
                                android:id="@+id/tvFilterOther"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:background="@drawable/selector_filter_bg"
                                android:button="@null"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:paddingStart="13dp"
                                android:paddingTop="7dp"
                                android:paddingEnd="13dp"
                                android:paddingBottom="7dp"
                                android:text="@string/other"
                                android:textColor="@drawable/selector_filter_text_color"
                                android:visibility="gone" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="#FAFAFA" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:text="@string/tags"
                            android:textColor="#ff505050"
                            android:textSize="18dp" />

                        <language.chat.meet.talk.widget.flowlayout.TagFlowLayout
                            android:id="@+id/rvFilterlabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="9dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="83dp" />

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:id="@+id/vVipFilter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white75"
                    tools:background="@color/black20" />

                <ImageView
                    android:id="@+id/ivFilterVip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:src="@mipmap/ic_bt_vip" />


            </FrameLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:id="@+id/tvFilterSure"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/tab_selected_color"
        android:gravity="center"
        android:text="@string/sure"
        android:textColor="@color/white"
        android:textSize="16dp" />

</RelativeLayout>