<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="RtlCompat,ContentDescription,SpUsage">

    <RelativeLayout
        android:id="@+id/rlChatTitle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/action_bar_title_margin_top">

        <TextView
            android:id="@+id/tvChatTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/Chats_title"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            android:textSize="20dp"
            tools:ignore="SpUsage" />

        <com.speaky.common.weiget.TintDrawableImageView
            android:id="@+id/tvChatFriendManage"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@mipmap/ic_friend_manage"
            app:tint_drawable_color="@color/filter_text_color_normal" />

    </RelativeLayout>

    <include layout="@layout/include_im_status_bar"
        android:id="@+id/includeChatImStatus"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/bg_im_status_bar"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/main_divider" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvChatList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <include
                android:id="@+id/lyEmpty"
                android:visibility="visible"
                layout="@layout/layout_empty" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>