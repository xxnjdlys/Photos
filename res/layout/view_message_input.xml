<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="RtlCompat,RtlSymmetry,ContentDescription">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">

        <ImageView
            android:id="@+id/messageSendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingEnd="20dp"
            android:src="@mipmap/ic_send"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/messageTransButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/messageSendButton"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:src="@mipmap/ic_translate"
            android:layout_centerVertical="true" />

        <EditText
            android:id="@+id/messageInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_centerVertical="true"
            android:maxLines="4"
            android:layout_marginStart="20dp"
            android:textSize="14dp"
            android:textColorHint="#e5999999"
            android:textColor="@color/label_text"
            android:background="@null"
            android:hint="@string/please_input"
            android:layout_toLeftOf="@id/messageTransButton"
            android:layout_toStartOf="@id/messageTransButton"
            android:inputType="textAutoCorrect|textAutoComplete|textMultiLine|textCapSentences"
            tools:ignore="SpUsage" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/ivChatAbulm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:src="@mipmap/ic_abulm" />

        <ImageView
            android:id="@+id/ivChatCrema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_cream"/>

        <ImageView
            android:id="@+id/ivChatFace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_face"/>

        <ImageView
            android:id="@+id/ivChatVoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="5dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_voice"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_voice_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="156dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvVoiceHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_hold_down_the_talk"
                android:textColor="#ff666666"
                android:textSize="16dp"
                tools:ignore="SpUsage" />

            <ImageView
                android:id="@+id/iv_send_voice"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:src="@drawable/chat_send_voice_btn_bg"
                android:layout_marginTop="16dp" />
        </LinearLayout>

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvEmoji"
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:overScrollMode="never"
        android:fadingEdge="none"
        android:visibility="gone" />

</LinearLayout>